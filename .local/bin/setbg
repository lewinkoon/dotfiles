#!/usr/bin/env sh

#[ ! -z "$1" ] && convert "$1" ~/.config/wall/wall.png &&
#convert "$1" -crop 50%x1080 ~/.config/wall/wall.png &&

wallpaper="$HOME/.config/wall"
if [ ! -z "$1" ]
then
  cp $1 $wallpaper
fi
xwallpaper --output DP-0 --zoom $wallpaper
xwallpaper --output DP-2 --zoom $wallpaper
notify-send -i "$wallpaper" "Wallpaper changed."
